/* components/login.wxss */
.loginBox{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
  background: rgba(0,0,0,0.3);
  z-index: 111;
}
.loginBox>.columnBox{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  width: 90%;
  margin: 50% auto 0;
  border-radius: 20rpx;
  padding:40rpx 0;
  font-size:32rpx;
}
.closeLogin{
  height:46rpx;
  line-height:46rpx;
  border-radius:46rpx;
  border:1px solid #B6192E;
  text-align: center;
  padding:0 20rpx;
  display: inline-block;
}
.loginBox button{
  background: #B6192E;
  color:#fff;
  font-size: 34rpx;
  width:310rpx;
  height:72rpx;
  line-height:72rpx;
  margin: 70rpx 0 30rpx;
}